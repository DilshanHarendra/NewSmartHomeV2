<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateSmartHomeFrag2">

    <!-- TODO: Update blank fragment layout -->
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">


     <TextView
         android:id="@+id/textView5"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"

         android:text="Enter Name for your SmartHome"
         android:textAlignment="center" />

     <EditText
         android:id="@+id/ghomename"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView5"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:ems="10"

         android:hint="home1"
         android:inputType="textPersonName"

         android:textAlignment="center" />
     <TextView
         android:id="@+id/textView6"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Enter Passowrd"
         android:textAlignment="center"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
         android:layout_below="@+id/ghomename"
         />

     <EditText
         android:id="@+id/gpassword1"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView6"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:hint="Password"
         android:inputType="textPassword"


         android:textAlignment="center" />

     <TextView
         android:id="@+id/textView7"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/gpassword1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:text="Re-Enter Passowrd"
         android:textAlignment="center" />

     <EditText
         android:id="@+id/gpassword2"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView7"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"

         android:hint="Password"
         android:inputType="textPassword"
         android:paddingLeft="12dp"
         android:textAlignment="center" />

     <Button
         android:id="@+id/chback"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/gpassword2"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="30dp"
         android:layout_marginTop="20dp"
         android:text="back" />

     <Button
         android:id="@+id/chnext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/gpassword2"
         android:layout_alignParentRight="true"
         android:layout_marginTop="20dp"
         android:layout_marginRight="30dp"
         android:text="next" />




 </RelativeLayout>

</FrameLayout>